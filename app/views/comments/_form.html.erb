<%= form_for [@link, @comment] do |f| %>
  </br>
  <%= f.text_area :text, class: "form-control" %></br>
  <%= f.hidden_field :commentable_id, :value => @link.id %> 
  <%= f.hidden_field :commentable_type, :value => "0" %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit(:class => "btn btn-info") %>
<% end %>